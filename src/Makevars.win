TARGET = $(subst 64,x86_64,$(subst 32,i686,$(WIN)))-pc-windows-gnu
LIBDIR = wrapper/target/$(TARGET)/release
STATLIB = $(LIBDIR)/wrapper.lib
PKG_LIBS = -L$(LIBDIR) -lwrapper -lws2_32 -ladvapi32 -luserenv

all: clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	cargo build --target=$(TARGET) --release --manifest-path=wrapper/Cargo.toml

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) wrapper/target
